<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config/>

    <bean name="/endpoint" class="org.bbyk.examples.spring.properties.imports.StaticResponseController">
        <!-- curl -4 -s http://localhost:8080/server/endpoint returns ok -->
        <property name="injectedResponse" value="success"/>
        <property name="sleepTimeMs" value="250"/>
    </bean>
</beans>
